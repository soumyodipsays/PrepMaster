@model PrepMaster.Models.TeacherOnboardingVM
@{
    ViewBag.Title = "Teacher Onboarding";
}

@Html.Partial("_Navbar")

<main class="d-flex justify-content-center align-items-center mt-5 pt-5"
      style="min-height: 90vh;margin-top:10px;">

    <div class="card shadow-lg border-0 p-5"
         style="max-width: 850px; width:100%; border-radius:20px;">

        <!-- Icon -->
        <div class="text-center mb-4">
            <div style="width:90px;height:90px;background:#e9ecf7;
                        border-radius:50%;display:flex;
                        align-items:center;justify-content:center;
                        margin:auto;">
                <i class="fas fa-user-tie fa-2x text-primary"></i>
            </div>

            <h2 class="mt-4 fw-bold">Teacher Onboarding</h2>
            <p class="text-muted">
                Tell us what you teach so we can personalize your dashboard.
            </p>
        </div>

        <input type="hidden" id="teacherId" value="@Model.TeacherId" />

        <div class="p-4 rounded"
             style="background-color:#f8f9fb;border:1px solid #e5e7eb;">

            <h5 class="fw-bold mb-4">Select Your Classes & Subjects</h5>

            @{
                var groupedData = Model.AvailableSubjects
                    .GroupBy(x => new { x.ClassId, x.ClassName })
                    .OrderBy(g => g.Key.ClassName);
            }

            @foreach (var classGroup in groupedData)
            {
                <div class="mb-4">
                    <h6 class="fw-bold text-primary mb-3">
                        @classGroup.Key.ClassName
                    </h6>

                    <div class="row">
                        @foreach (var subject in classGroup)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input subject-checkbox"
                                           type="checkbox"
                                           value="@subject.MatchId"
                                           id="match_@subject.MatchId" />

                                    <label class="form-check-label"
                                           for="match_@subject.MatchId">
                                        @subject.SubjectName
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Button -->
        <div class="text-center mt-4">
            <button id="btnSave"
                    class="btn text-white px-5 py-3"
                    style="background: linear-gradient(90deg,#5b5ce2,#4b3ccf);
                           border-radius:12px;
                           font-weight:600;
                           font-size:16px;">
                Complete Setup & Go to Dashboard
            </button>
        </div>

    </div>
</main>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $("#btnSave").click(function () {

            var teacherId = $("#teacherId").val();
            var selectedIds = [];

            $(".subject-checkbox:checked").each(function () {
                selectedIds.push($(this).val());
            });

            if (selectedIds.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No Selection',
                    text: 'Please select at least one subject.',
                    confirmButtonColor: '#5b5ce2'
                });
                return;
            }

            $.ajax({
                url: '@Url.Action("AddSpecialization", "Teacher")',
                type: 'POST',
                data: {
                    TeacherId: teacherId,
                    MatchIdList: selectedIds.join(",")
                },
                beforeSend: function () {
                    $("#btnSave").prop("disabled", true);
                },
                success: function (response) {

                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message,
                            confirmButtonColor: '#5b5ce2'
                        }).then(() => {
                            window.location.href = '@Url.Action("Index","Teacher")';
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            confirmButtonColor: '#dc3545'
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: 'Something went wrong. Please try again.',
                        confirmButtonColor: '#dc3545'
                    });
                },
                complete: function () {
                    $("#btnSave").prop("disabled", false);
                }
            });
        });
    </script>
}